<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.authorposts.any? %>
      <h3>Authorposts (<%= @user.authorposts.size %>)</h3>
      <ol class="authorposts">
        <%= render @authorposts %>
      </ol>
      <%= will_paginate @authorposts %>
    <% end %>
  </div>
</div>
